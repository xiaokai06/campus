<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huiyi.campus.dao.mapper.web.sys.SysRoleMenuMapper">

  <!-- 通过用户ID查询菜单权限 -->
  <select id="selectMenuById" parameterType="java.lang.Integer" resultMap="MenuResultMap">
    select s.menu_id as id,u.menu_name,u.root_path,u.path
    from sys_role_menu s
                 left join sys_menu u on s.menu_id = u.id
    where role_id = (select role_id from sys_user_role where user_id = #{userId})
  </select>

  <resultMap id="RoleMenuResult" type="com.huiyi.campus.dao.entity.sys.SysRoleMenuEntity">
    <result column="id" property="id"/>
    <result column="role_id" property="roleId"/>
    <result column="menu_id" property="menuId"/>
  </resultMap>

  <!-- 查询角色ID有哪些菜单权限 -->
  <select id="selectMenuByRoleId" parameterType="java.util.List" resultMap="RoleMenuResult">
      select id,role_id,menu_id from sys_role_menu where role_id in (
      <foreach collection="idList" item="item" separator=",">
          #{item}
      </foreach>
      )
  </select>

  <resultMap id="RoleResultMap" type="com.huiyi.campus.dao.entity.sys.SysRoleEntity">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="role_name" jdbcType="VARCHAR" property="roleName" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="role_status" jdbcType="INTEGER" property="roleStatus" />
    <result column="sort" jdbcType="INTEGER" property="sort" />
  </resultMap>

  <sql id="Role_Column_List">
    id, role_name, create_time, update_time, role_status, sort
  </sql>

  <!-- 查询所有角色信息 -->
  <select id="selectAllRole" parameterType="java.lang.String" resultMap="RoleResultMap">
    select
        <include refid="Role_Column_List" />
    from sys_role
        where 1=1
          <if test="roleName != null and roleName != ''">
            and role_name=#{roleName,jdbcType=VARCHAR}
          </if>
  </select>

  <!-- 新增角色信息 -->
  <insert id="insertRoleInfo" useGeneratedKeys="true" keyProperty="id" parameterType="com.huiyi.campus.dao.entity.sys.SysRoleEntity">
    insert into sys_role
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="roleName != null">
        role_name,
      </if>
      <if test="createTime != null">
        create_time,
      </if>
      <if test="roleStatus != null">
        role_status,
      </if>
      <if test="sort != null">
        sort,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="roleName != null">
        #{roleName,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null">
        #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="roleStatus != null">
        #{roleStatus,jdbcType=INTEGER},
      </if>
      <if test="sort != null">
        #{sort,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

  <!-- 更新角色信息 -->
  <update id="updateRoleInfo" parameterType="com.huiyi.campus.dao.entity.sys.SysRoleEntity">
    update sys_role
    <set>
      <if test="roleName != null">
        role_name = #{roleName,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null">
        create_time = #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="roleStatus != null">
        role_status = #{roleStatus,jdbcType=INTEGER},
      </if>
      <if test="sort != null">
        sort = #{sort,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>

  <!-- 删除角色信息 -->
  <delete id="deleteRoleInfo" parameterType="java.lang.Integer">
    delete from sys_role where id = #{id,jdbcType=INTEGER}
  </delete>

  <resultMap id="MenuResultMap" type="com.huiyi.campus.dao.entity.sys.SysMenuEntity">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="menu_name" jdbcType="VARCHAR" property="menuName" />
    <result column="parent_id" jdbcType="INTEGER" property="parentId"/>
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="menu_level" jdbcType="VARCHAR" property="menuLevel" />
    <result column="sort" jdbcType="VARCHAR" property="sort" />
    <result column="root_path" jdbcType="VARCHAR" property="rootPath"/>
    <result column="path" jdbcType="VARCHAR" property="path"/>
  </resultMap>

  <sql id="Menu_Column_List">
    id, parent_id, menu_name, create_time, update_time, menu_level, sort, root_path, path
  </sql>

  <!-- 超管角色查询所有菜单 -->
  <select id="selectAllMenu" parameterType="java.lang.String" resultMap="MenuResultMap">
    select
        <include refid="Menu_Column_List" />
    from sys_menu
        where 1=1
          <if test="menuName != null and menuName != ''">
            and menu_name = #{menuName,jdbcType=INTEGER}
          </if>
  </select>

  <!-- 新增菜单信息 -->
  <insert id="insertMenuInfo" useGeneratedKeys="true" keyProperty="id" parameterType="com.huiyi.campus.dao.entity.sys.SysMenuEntity">
    insert into sys_menu
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="menuName != null">
        menu_name,
      </if>
      <if test="createTime != null">
        create_time,
      </if>
      <if test="menuLevel != null">
        menu_level,
      </if>
      <if test="sort != null">
        sort,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="menuName != null">
        #{menuName,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null">
        #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="menuLevel != null">
        #{menuLevel,jdbcType=INTEGER},
      </if>
      <if test="sort != null">
        #{sort,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

  <!-- 修改菜单信息 -->
  <update id="updateMenuInfo" parameterType="com.huiyi.campus.dao.entity.sys.SysMenuEntity">
    update sys_menu
    <set>
      <if test="menuName != null">
        menu_name = #{menuName,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null">
        create_time = #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="menuLevel != null">
        menu_level = #{menuLevel,jdbcType=INTEGER},
      </if>
      <if test="sort != null">
        sort = #{sort,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>

  <!-- 删除菜单信息 -->
  <delete id="deleteMenuInfo" parameterType="java.lang.Integer">
    delete from sys_menu where id=#{id}
  </delete>

  <!-- 新增角色和菜单权限 -->
  <insert id="insertRoleMenuInfo" useGeneratedKeys="true" keyProperty="id" parameterType="java.util.List">
    insert into sys_role_menu(role_id, menu_id) values (
    <foreach collection="list" item="item" separator=",">
      #{roleId},#{item}
    </foreach>
    )
  </insert>

  <!-- 通过角色ID删除菜单权限 -->
  <delete id="deleteMenuByRoleId" parameterType="java.lang.Integer">
    delete from sys_role_menu where role_id=#{roleId}
  </delete>

</mapper>