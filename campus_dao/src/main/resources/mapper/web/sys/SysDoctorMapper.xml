<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huiyi.campus.dao.mapper.web.sys.SysDoctorMapper">

  <resultMap id="BaseResultMap" type="com.huiyi.campus.dao.entity.sys.SysDoctorEntity">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="doctor_name" jdbcType="VARCHAR" property="doctorName" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="desk_id" jdbcType="INTEGER" property="deskId"/>
  </resultMap>

  <!-- 查询所有医生 -->
  <select id="selectAllDoctor" parameterType="com.huiyi.campus.dao.entity.sys.SysDoctorEntity" resultMap="BaseResultMap">
    select id, doctor_name, create_time, update_time,desk_id
        from sys_doctor
            where 1=1
              <if test="doctorName != null and doctorName != ''">
                and doctor_name=#{doctorName,jdbcType=VARCHAR}
              </if>
  </select>

  <!-- 新增医生 -->
  <insert id="insertDoctorInfo" useGeneratedKeys="true" keyProperty="id" parameterType="com.huiyi.campus.dao.entity.sys.SysDoctorEntity">
    insert into sys_doctor
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="doctorName != null">
        doctor_name,
      </if>
      <if test="createTime != null">
        create_time,
      </if>
      <if test="deskId != null">
        desk_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="doctorName != null">
        #{doctorName,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null">
        #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="deskId != null">
        #{deskId,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

  <!-- 修改医生 -->
  <update id="updateDoctorInfo" parameterType="com.huiyi.campus.dao.entity.sys.SysDoctorEntity">
    update sys_doctor
    <set>
      <if test="doctorName != null">
        doctor_name = #{doctorName,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null">
        create_time = #{createTime,jdbcType=TIMESTAMP},
      </if>
      <if test="deskId != null">
        desk_id=#{deskId,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>

  <!-- 删除医生 -->
  <delete id="deleteDoctorInfo" parameterType="java.lang.Integer">
    delete from sys_doctor where id = #{id,jdbcType=INTEGER}
  </delete>

</mapper>