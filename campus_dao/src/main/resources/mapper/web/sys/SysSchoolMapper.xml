<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huiyi.campus.dao.mapper.web.sys.SysSchoolMapper">

    <resultMap id="BaseResultMap" type="com.huiyi.campus.dao.entity.sys.SysSchoolEntity">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="school_name" jdbcType="VARCHAR" property="schoolName"/>
        <result column="school_address" jdbcType="VARCHAR" property="schoolAddress"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <select id="selectAllSchool" parameterType="com.huiyi.campus.dao.entity.sys.SysSchoolEntity" resultMap="BaseResultMap">
        select s.id, s.school_name, s.school_address, s.create_time, s.update_time, n.organ_id
            from sys_school s left join sys_school_organ n on s.id = n.school_id
                <if test="schoolName != null and schoolName != ''">
                    and s.school_name = #{schoolName,jdbcType=VARCHAR}
                </if>
                <if test="schoolAddress != null and schoolAddress != ''">
                    and s.school_address = #{schoolAddress,jdbcType=VARCHAR}
                </if>
    </select>

    <insert id="insertSchoolInfo" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.huiyi.campus.dao.entity.sys.SysSchoolEntity">
        insert into sys_school
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="schoolName != null">
                school_name,
            </if>
            <if test="schoolAddress != null">
                school_address,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="schoolName != null">
                #{schoolName,jdbcType=VARCHAR},
            </if>
            <if test="schoolAddress != null">
                #{schoolAddress,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
        </trim>
    </insert>

    <update id="updateSchoolInfo" parameterType="com.huiyi.campus.dao.entity.sys.SysSchoolEntity">
        update sys_school
        <set>
            <if test="schoolName != null">
                school_name = #{schoolName,jdbcType=VARCHAR},
            </if>
            <if test="schoolAddress != null">
                school_address = #{schoolAddress,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteSchoolInfo" parameterType="java.lang.Integer">
        delete from sys_school where id = #{id,jdbcType=INTEGER}
    </delete>

    <!--根据用户ID查询当前所归属学校-->
    <select id="selectSchoolByUserId" resultMap="BaseResultMap">
        SELECT school.id, school.school_name, school.school_address, school.create_time, school.update_time
        FROM sys_school school
                     LEFT JOIN sys_user u
                ON school.id = u.school_id
        WHERE u.id = #{userId,jdbcType=INTEGER}
    </select>

    <!--根据教育局ID与用户ID查询学校-->
    <select id="selectSchoolByUserIdAndOrganId" resultMap="BaseResultMap">
        SELECT school.id, school.school_name, school.school_address, school.create_time, school.update_time
        FROM sys_school school
                     INNER JOIN sys_school_organ o ON school.id = o.school_id
                     INNER JOIN sys_user u ON o.organ_id = u.organ_id
        WHERE u.id = #{userId,jdbcType=INTEGER}
    </select>
</mapper>